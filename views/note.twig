{% extends 'layout.twig' %}

{% block head %}
  <!-- Bootstrap core CSS -->
  <link rel='stylesheet' href='/stylesheets/assets/dist/css/bootstrap.css' />

  <style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }
  </style>
  <!-- Custom styles for this template -->
  <link href="/stylesheets/notes.css" rel="stylesheet">
{% endblock %}

{% block body %}
  <body class="bg-light">
  <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
    <a class="navbar-brand mr-auto mr-lg-0" href="#">Заметки</a>
    <button class="navbar-toggler p-0 border-0" type="button" data-toggle="offcanvas">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="navbar-collapse offcanvas-collapse" id="navbarsExampleDefault">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Главная</a>
        </li>
      </ul>
      <form class="form-inline my-2 my-lg-0">
{#        <a class="nav-link mr-sm-2" href="/logout">Выход</a>#}
      </form>
    </div>
  </nav>

  <main role="main" class="container">

    <div class="my-3 p-3 bg-white rounded shadow-sm">
      <h6 class="border-bottom border-gray pb-2 mb-0">Заметка</h6>

      <div class="media text-muted pt-3">
        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
          <strong class="d-block text-gray-dark">Создано {{ note.createdAt|date('Y/d/m H:m') }}</strong>
          {{ note.note_text|e('html') }}
        </p>

      </div>
    </div>

  </main>
  <script src="/javascripts/jquery-3.5.1.slim.min.js"></script>

  <script src="/javascripts/offcanvas.js"></script>
  </body>
{% endblock %}
